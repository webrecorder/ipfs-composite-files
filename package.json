{
  "name": "ipfs-composite-files",
  "version": "0.1.0",
  "main": "index.js",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./index.js"
  },
  "bin": {
    "ipfs-composite-files": "./cli.js"
  },
  "scripts": {
    "test": "c8 ava",
    "lint": "eslint ./src/*.js ./test/*.js cli.js",
    "format": "prettier --write cli.js src/*.js test/*.js"
  },
  "dependencies": {
    "client-zip": "github:ikreymer/client-zip#ipfs-zip-support",
    "ipfs-core": "^0.15.4",
    "yargs": "^17.5.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": false,
      "es2021": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "prettier"
    ]
  },
  "prettier": {},
  "devDependencies": {
    "ava": "^4.3.1",
    "c8": "^7.12.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1"
  },
  "ava": {
    "files": [
      "test/*",
      "!test/helpers/**"
    ],
    "serial": true,
    "timeout": "60s"
  }
}
